{% extends 'base.html.twig' %}

{% block title %}Back Office
{% endblock %}

{% block body %}

	{% for message in app.flashes('creationGrid') %}
		<div class="flash-message alert alert-success">
			{{ message }}
		</div>
	{% endfor %}

	<div id='admin_page' class="example-wrapper mt-5 pt-5">
		<h1>Bonjour Administrateur</h1>
		<h6>Formulaire de création de grille</h6>
		<div class="d-flex justify-content-center mt-5">
			<form method="POST" name="sudoku_grid_creator" id="sudoku_grid_creator" action="{{ path('new_grid') }}">
				<input type="hidden" name="token" value="{{ csrf_token('new-grid') }}"/>
				<div class="d-flex justify-content-between mt-3 pl-3 pr-3 row">
					<label for="name-grid">Nom:</label>
					<input class="form-control" type="text" id="name-grid" name="name" placeholder="Nom de la grille" required>
					<label for="level-select">Niveau:</label>
					<select class="form-control mt-5" name="level" id="level-select" required>
						<option value="">--Ajouter un niveau de complexité--</option>
						<option value="1">Facile</option>
						<option value="2">Normal</option>
						<option value="3">Difficile</option>
					</select>
					<input id="structure" name="structure" type="hidden" value="">
					<input id="solution" name="solution" type="hidden" value="">
				</div>
				<div class="d-flex justify-content-center mt-5 row">
					<input class="btn btn-lg btn-primary mb-3 me-md-3" form="sudoku_grid_creator" type="submit" value="Soumettre">
				</div>
			</form>
		</div>


	</div>

	{% block javascripts %}
		{{ parent() }}
		<script src="{{ asset('js/sudoku.js') }}"></script>
	{% endblock %}

{% endblock %}
